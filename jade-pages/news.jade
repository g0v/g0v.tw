extend layout

block script
    script(type="text/javascript").
        $(document).ready(function () {
            var page = "news";
            $("#nav_" + page).addClass("active");
        }); 

block title 
    最新消息

block content
    #news_left
        #news_nav
            .news_nav_tab#news_media_report(tab-url="./news/media_report.html")
                | 媒體報導
            .news_nav_tab#news_act(tab-url="./news/act_record.html")
                | 活動記錄
            .news_nav_tab#news_act_info(tab-url="./news/act_info.html")
                | 活動資訊
            .news_nav_tab#news_media(tab-url="./news/media.html")
                | 媒體專區

        #news_content

    #news_right

    #news_float_clear

    script(type="text/javascript", src="./javascript/switchTab.js")
    script(type="text/javascript").
        var newSwitchTab = new switchTab({
            tabClass: 'news_nav_tab',
            contentId: 'news_content',
            activeClass: 'news_active',
            tabId: ['news_media_report', 'news_act', 'news_act_info', 'news_media', 'join_vote'],
            showFirst: 'news_media_report'
        });