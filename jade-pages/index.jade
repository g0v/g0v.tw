extend layout

block title
    零時政府 g0v.tw 首頁

block content
    #index_left_container
        .index_inner_container(ng-controller="FeaturedCtrl")
            h2
                | 最新成果
                a.pull-right(ng-click="nextProject()") &#xbb;
            .featured-projects
                h3: a(ng-href="{{project.homepage}}") {{project.name_zh || project.name}}
                .imgblock(style="text-align:center;border-top:1px solid #ccc;border-bottom:1px solid #ccc")
                  a(ng-href='{{project.homepage}}')
                    #prj-img-div
                      img#prj-img(ng-src='{{project.thumbnail.reduce ? project.thumbnail.0 : project.thumbnail}}',onload="show()")
                p.description {{ project.description_zh || project.description }}

        .index_inner_container(ng-controller="BlogCtrl")
            h2 部落格
            article(ng-repeat="article in articles | orderBy:'$index':true")
                h3: a(ng-href="{{article.link}}") {{article.title}}
                p(ng-bind="article.description")

    #index_right_container

        .index_inner_container

            .events(ng-controller="EventCtrl")
                h2 活動訊息
                ul
                    li(ng-repeat="event in events | orderBy:'$index':true")
                        a(ng-href="{{event.link}}") {{event.title}}

            .videos
                h2 相關影片
                iframe(defer-src="//www.youtube.com/embed/htzr00ecDis?list=PLS1JHIK5Va9K-nP7gbq3C0cqG1409FpiU",frameborder="0",allowfullscreen)

            .logbot
                h2 即時聊天
                h4: a(target="_blank",class="btn btn-info",href="http://hack.g0v.tw/irc") 進入聊天室
                iframe(height="480",defer-src="http://logbot.g0v.tw/widget/g0v.tw",frameborder="0",allowfullscreen)

            .g0village
                h2 線上遊戲
                h4: a(target="_blank",class="btn btn-info",href="http://8bit.g0v.tw/") 8-bit 新手村

    #index_float_clear
